<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="@color/lightGray_bg">

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="659dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/Teal"
            android:src="@drawable/arrow_back"
            app:tint="@color/lightGray_bg">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

        <ImageView
            android:id="@+id/ExpensesImageView4"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            app:srcCompat="@drawable/expenses_img" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="427dp">

            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="413dp"
                android:layout_height="433dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f5f5f5"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnUtility"
                        android:layout_width="320dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/expenses_btn"
                        android:drawableLeft="@drawable/utility_icon"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:stateListAnimator="@android:anim/cycle_interpolator"
                        android:text="Utility"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnTelecommunication"
                        android:layout_width="320dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/expenses_btn"
                        android:drawableLeft="@drawable/telecommunication"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Telecommunication"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnHealth"
                        android:layout_width="320dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/expenses_btn"
                        android:drawableLeft="@drawable/health2_icon"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Health"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnFood"
                        android:layout_width="320dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/expenses_btn"
                        android:drawableLeft="@drawable/food_icon"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Food"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnGroceries"
                        android:layout_width="320dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/expenses_btn"
                        android:drawableLeft="@drawable/grocerise_icon"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Groceries"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnLoan"
                        android:layout_width="320dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/expenses_btn"
                        android:drawableLeft="@drawable/loan3"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Loan"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnLeasing"
                        android:layout_width="320dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/expenses_btn"
                        android:drawableLeft="@drawable/finance_icon"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Leasing"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnTransaction"
                        android:layout_width="320dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/expenses_btn"
                        android:drawableLeft="@drawable/card2"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Transactions"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnOther"
                        android:layout_width="320dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/expenses_btn"
                        android:drawableLeft="@drawable/other_icon"
                        android:drawablePadding="12dp"
                        android:paddingLeft="18dp"
                        android:text="Other"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</RelativeLayout>